{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"types": ["node", "bun"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"noEmit": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"baseUrl": "."
	},
	"include": ["src/**/*", "../frontend/src/utils/getTablerIcon.ts"]
}
