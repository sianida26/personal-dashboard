		"db:generate": "drizzle-kit generate",
		"db:seed": "bun src/drizzle/seedRunner.ts",
		"db:migrate": "bun src/drizzle/migration.ts",
		"db:studio": "drizzle-kit studio",
		"db:up": "drizzle-kit up",
