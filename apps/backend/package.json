		"drizzle-orm": "^0.44.2",
		"jsonwebtoken": "^9.0.2",
		"moment": "^2.30.1",
		"postgres": "^3.4.7",
		"sharp": "^0.34.2"
	},
	"devDependencies": {
		"@types/jsonwebtoken": "^9.0.10",
		"drizzle-kit": "^0.31.1",
