{
	"name": "backend",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"db:generate": "bun x drizzle-kit generate",
		"db:migrate": "bun x drizzle-kit migrate",
		"db:seed": "bun run src/drizzle/seed.ts",
		"db:studio": "bun x drizzle-kit studio",
		"db:up": "bun x drizzle-kit up",
		"start": "bun src/index.ts",
		"db:prepare": "bun run db:migrate && bun run db:seed",
		"generate-jwt-keys": "bun run scripts/generate-jwt-keys.ts",
		"test": "NODE_ENV=test bun test --env-file .env.test.local --preload ./src/test-preload.ts",
		"test:coverage": "NODE_ENV=test bun test --coverage --env-file .env.test.local --preload ./src/test-preload.ts",
		"lint": "biome lint --write --diagnostic-level warn",
		"format": "biome format --write --diagnostic-level warn",
		"check": "tsc --noEmit"
	},
	"dependencies": {
		"@ai-sdk/openai": "^2.0.88",
		"@azure/msal-node": "^3.8.4",
		"@hono/node-server": "^1.19.7",
		"@hono/oauth-providers": "^0.8.5",
		"@hono/zod-validator": "^0.7.6",
		"@microsoft/microsoft-graph-client": "^3.0.7",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/api-logs": "^0.208.0",
		"@opentelemetry/auto-instrumentations-node": "^0.67.3",
		"@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
		"@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
		"@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
		"@opentelemetry/resources": "^2.2.0",
		"@opentelemetry/sdk-logs": "^0.208.0",
		"@opentelemetry/sdk-metrics": "^2.2.0",
		"@opentelemetry/sdk-node": "^0.208.0",
		"@paralleldrive/cuid2": "^3.0.4",
		"@repo/data": "workspace:*",
		"@repo/validation": "workspace:*",
		"@turbo/gen": "^2.7.1",
		"@types/nodemailer": "^7.0.4",
		"ai": "^5.0.116",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.1",
		"hono-rate-limiter": "^0.5.1",
		"jsonwebtoken": "^9.0.3",
		"moment": "^2.30.1",
		"nodemailer": "^7.0.11",
		"pino-opentelemetry-transport": "^2.0.0",
		"postgres": "^3.4.7",
		"sharp": "^0.34.5",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/jsonwebtoken": "^9.0.10",
		"pg": "^8.16.3",
		"tsx": "^4.21.0"
	},
	"exports": {
		".": "./src/index.ts",
		"./types": "./src/types/index.d.ts"
	}
}