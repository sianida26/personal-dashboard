# Application
APP_ENV = production #production, development
APP_HOST = 127.0.0.1 #an ip address
APP_PORT = 3000
BASE_URL = http://localhost:3000 #if production, should be an FQDN
FRONTEND_URL = http://localhost:5173 #if production, should be an FQDN

# Database
DATABASE_URL = postgres://user:password@localhost:5432/dashboard_template

# Secrets
PRIVATE_KEY_PATH = private_key.pem
PUBLIC_KEY_PATH = public_key.pem

# Logging
LOG_ERROR = true
LOG_INFO = true
LOG_DEBUG = false
LOG_REQUEST = true
LOG_SQL = true

# Observability Controls
OBSERVABILITY_ENABLED = true
OBSERVABILITY_RECORD_SELF = false              # Record observability route calls
OBSERVABILITY_RECORD_OPTIONS = true           # Record OPTIONS method requests (CORS preflight)
OBSERVABILITY_RETENTION_DAYS = 30
OBSERVABILITY_MAX_BODY_SIZE = 10240            # Max request/response body size to store (bytes)

# Data Privacy Controls
OBSERVABILITY_MASK_SENSITIVE_DATA = true       # Mask passwords, tokens, etc.
OBSERVABILITY_ANONYMIZE_USERS = false          # Store user IDs vs anonymous tracking
OBSERVABILITY_STORE_REQUEST_BODIES = true      # Toggle request body storage
OBSERVABILITY_STORE_RESPONSE_BODIES = true     # Toggle response body storage

# Feature Flags
ENABLE_MICROSOFT_OAUTH = true

# Microsoft OAuth (only required if ENABLE_MICROSOFT_OAUTH is true)
# MICROSOFT_CLIENT_ID=your-client-id
# MICROSOFT_CLIENT_SECRET=your-client-secret
# MICROSOFT_TENANT_ID=your-tenant-id
# MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback