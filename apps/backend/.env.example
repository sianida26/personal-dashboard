# Application
APP_ENV = production #production, development
APP_HOST = 127.0.0.1 #an ip address
APP_PORT = 3000
BASE_URL = http://localhost:3000 #if production, should be an FQDN
FRONTEND_URL = http://localhost:5173 #if production, should be an FQDN

# Database
DATABASE_URL = postgres://user:password@localhost:5432/dashboard_template

# Secrets
PRIVATE_KEY_PATH = private_key.pem
PUBLIC_KEY_PATH = public_key.pem

# Logging
LOG_ERROR = true
LOG_INFO = true
LOG_DEBUG = false
LOG_REQUEST = true
LOG_SQL = true

OPENAI_API_KEY =

# OpenTelemetry Configuration
OTEL_ENABLED = true
OTEL_SERVICE_NAME = dashboard-backend
OTEL_EXPORTER_OTLP_ENDPOINT = http://localhost:4318
# OTEL_EXPORTER_OTLP_HEADERS = # Optional: {"signoz-access-token":"YOUR_TOKEN"} for SigNoz Cloud

# Feature Flags
ENABLE_MICROSOFT_OAUTH = true

# Microsoft OAuth (only required if ENABLE_MICROSOFT_OAUTH is true)
# MICROSOFT_CLIENT_ID=your-client-id
# MICROSOFT_CLIENT_SECRET=your-client-secret
# MICROSOFT_TENANT_ID=your-tenant-id
# MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback
# Email Configuration (Nodemailer)
SMTP_HOST = smtp.gmail.com
SMTP_PORT = 587
SMTP_USER = your-email@gmail.com
SMTP_PASS = your-app-password
SMTP_FROM_EMAIL = noreply@yourdomain.com
SMTP_FROM_NAME = Dashboard Notifications

# WhatsApp Configuration (WAHA)
WAHA_API_URL = http://localhost:3001
WAHA_API_TOKEN = your-waha-token

# Notification Override Recipients (optional)
# When set, ALL notifications will be redirected to these recipients instead of actual recipients
# Useful for testing/development to prevent sending notifications to real users
# NOTIFICATION_OVERRIDE_EMAIL = developer@example.com
# NOTIFICATION_OVERRIDE_PHONE = +15555550100
